{
  "manifest_version": 3,
  "name": "FindThePieces Extension",
  "version": "1.0",
  "description": "Extensión básica de Chrome.",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Find The Pieces"
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Open Find The Pieces extension page"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["sounds/*"],
      "matches": ["<all_urls>"]
    }
  ]
}